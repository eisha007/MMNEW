<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".Top20">

    <Spinner
        android:id="@+id/playersSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="471dp"
        android:background="@android:color/background_light"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelAbout"
        android:layout_width="368dp"
        android:layout_height="58dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="581dp"
        android:background="@android:color/holo_blue_bright"
        android:text="About The Top 10"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelDescribe"
        android:layout_width="327dp"
        android:layout_height="40dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="504dp"
        android:background="@android:color/background_light"
        android:text="select the player you want to learn more about from the drop down menu below"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showInfo"
        android:layout_width="313dp"
        android:layout_height="211dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="212dp"
        android:background="@android:color/background_light"
        android:fontFamily="monospace"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/imageStats"
        android:layout_width="169dp"
        android:layout_height="105dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="98dp"
        android:background="@android:color/background_dark"
        android:text="TextView"
        android:textColor="@android:color/background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/check2"
        android:layout_width="85dp"
        android:layout_height="77dp"
        android:layout_marginStart="304dp"
        android:layout_marginTop="589dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/baskeball"
        android:text="go home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="backHome"/>

</androidx.constraintlayout.widget.ConstraintLayout>